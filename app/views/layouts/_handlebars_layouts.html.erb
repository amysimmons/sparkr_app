<script type="x-handlebars-template" id="userTemplate">
  <li data-user-id="{{ id }}">
    <span id="{{ name }}"> {{ name }} </span>
  </li>
</script>

<script type='x-handlebars-template' id='momentTemplate'>
  <li class="moment" data-moment-id="{{ id }}">
    <img class="moment-image" src="{{ content.medium.url }}"></img>
    <a href="#" class="delete">Remove moment</a>
  </li>
</script>

<script type="x-handlebars-template" id="matchTemplate">
  <div class="match-box" data-match-id="{{ id }}">
    <h3 id="match_name">{{ name }}</h3>
    <img id="match_userprofile_pic" src="{{ profile_pic.medium.url }}"></img>
    <div class="match-content">
      <span id="match_age">{{ name }} is {{ age }} and lives in {{ location }}</span>
      <div id="{{ id }}-got_a_firework"></div>
      <div id="{{ id }}-start_a_firework"></div>
    </div>
    <div class="match-btn-container">
      <a class="match-btn match-profile-btn" href="#">Profile<a>
      <a class="match-btn btn btn-success btn-xs start-conversation" data-sid="<%=@current_user.try(:id)%>" data-rip="{{ id }}" href="#">Message</a>
      <a class="match-btn match-fireworks-btn" data-match-id="{{ id }}" href="#">Fireworks</a>
    </div>
  </div>     
</script>

<script type="x-handlebars-template" id="current_userTemplate">
  <div data-user-id="{{ id }}">
    <h2>Profile</h2>
    <div class="profile-details">
      <h3 id="{{ current_username }}">{{ name }}</h3>
      <p id="{{ current_userusername }}"><span class="profile-label">Username</span> {{ username }} </p>
      <p id="{{ current_userdob }}"><span class="profile-label">Date of Birth</span> {{ age }} </p>
      <p id="{{ current_usergender }}"><span class="profile-label">Gender</span> {{ gender }} </p>
      <p id="{{ current_usersexual_preference }}"><span class="profile-label">Preference</span> {{ sexual_preference }} </p>
      <p id="{{ current_userlocation }}"><span class="profile-label">Location</span> {{ location }} </p>
      <p id="{{ current_useremail }}"><span class="profile-label">Email</span> {{ email }} </p>
    </div>
    <div class="profile-photo">
      <img id="{{ current_userprofile_pic }}" src="{{ profile_pic.large.url }}"></img>      
    </div>
    <div class="profile-about">
      <h3>About</h3>
      <p id="{{ current_userdescription }}" class="about-profile"> {{ description }} </p>
    </div>
  </div>   
</script>
