<!DOCTYPE html>
<html>
<head>
  <title>SparkrApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta content='<%= @current_user.present? ? @current_user.id : "" %>' name='user-id'/>

</head>
<body class='<%= @current_user.present? ? "logged_in" : "logged_out" %>'>
  <nav class="main-nav">
    <ul>
      <%== nav_menu %>
    </ul>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
  <footer>  
  </footer>

  <%= render :partial => 'layouts/handlebars_layouts' %>
</body>
</html>
