<% @user = @user || User.new %>
<% if @user %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, :required => true, :placeholder => 'Username' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :required => true, :placeholder => 'Email' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, :required => true, :placeholder => 'Password' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirm password' %>
      <%= f.password_field :password_confirmation, :required => true, :placeholder => 'Confirm Password' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Sign up', :class => 'btn-form' %>
    </div>
  <% end %>
<% end %>

